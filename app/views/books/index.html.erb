    <%= @book.errors.count %>errors prohibited this book from being saved:
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
<% end %>

<div class= "index">

    <h1>Books</h1>
    <table>
        <thead>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </thead>

        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td><span><%= book.title %></span></td>
                    <td><span><%= book.body %></span></td>
                    <td><%= link_to "Show", book_path(book.id), method: :get %></td>
                    <td><%= link_to "Edit", edit_book_path(book.id) %></td>
                    <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>

</div>

<dif class= "new">

    <h1 class=new-book>New book</h1>
	<%= form_with model: @book, url: books_path(@book.id) do |f| %>
		<h4 class= new-title>title</h4>
		<%= f.text_field :title %>

		<h4 class= new-body>body</h4>
		<%= f.text_area :body %>

		<div class=buttom>
			<%= f.submit 'Create Book' %>
		</div>
	<% end %>

</div>
