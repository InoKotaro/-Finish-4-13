<div class= "new">


    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
            <ul>
                <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
        <% end %>
            </ul>
    <% end %>

<def class= "new">
    @book= Book.new
	<h1 class=new-book>New book</h1> <!--new-->
	<%= form_with model: @book, url: '/books' do |f| %>
		<h4 class= new-title>title</h4>
		<%= f.text_field :title %>

		<h4 class= new-body>body</h4>
		<%= f.text_area :body %>

		<div class=buttom>
			<%= f.submit 'Create Book' %>
		</div>
	<% end %>
</div>

<div class= "index">

<h1>Books</h1>  <!--index-->

    <table>
        <thead>
            <th>title</th>
            <th>body</th>
            <th colspan="3"></th>
        </thead>

        <tbody>
            <% @books.each do |book| %>
                <tr>
                    <td><span><%= book.title %></span></td>
                    <td><span><%= book.body %></span></td>
                    <td><a class="show_id"><%= link_to "Show", book_path(book.id) %></a></td>
                    <td><a class="edit_id"><%= link_to "Edit", edit_book_path(book.id) %></a></td>
                    <td><a class="destroy_id"><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
            <% end %>
        </tbody>
    </table>
</div>

