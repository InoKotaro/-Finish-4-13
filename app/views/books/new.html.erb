<div class= "new-html">

	<h1 class=new-book>New book</h1>

	<%= form_with model: @book, url: '/books' do |f| %>
		<h4 class= new-title>title</h4>
		<%= f.text_field :title %>

		<h4 class= new-body>body</h4>
		<%= f.text_area :body %>
		
		<div class=buttom>
			<%= f.submit 'Create Book' %>
		</div>
	<% end %>
</div>


